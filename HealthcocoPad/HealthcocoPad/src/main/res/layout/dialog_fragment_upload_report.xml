<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title_save" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_background"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="30"
                android:text="@string/attachment"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_upload_record_dialog" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70">

                <TextView
                    android:id="@+id/tv_select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_rounded_corners_grey_border_solid_white"
                    android:padding="10dp"
                    android:text="@string/choose_image"
                    android:textColor="@color/grey_dark_text"
                    android:textSize="@dimen/text_size_upload_record_dialog" />

                <com.healthcoco.healthcocopad.views.TouchImageView
                    android:id="@+id/iv_report"
                    android:layout_width="@dimen/image_width_height_upload_record"
                    android:layout_height="@dimen/image_width_height_upload_record"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/tv_select_image" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="30"
                android:text="@string/image_label"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_upload_record_dialog" />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="70"
                android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                android:gravity="start"
                android:hint="@string/image_label"
                android:maxLines="1"
                android:padding="10dp"
                android:textColorHint="@color/grey_hint_color"
                android:textSize="@dimen/text_size_upload_record_dialog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="30"
                android:text="@string/image_description"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_upload_record_dialog" />

            <EditText
                android:id="@+id/edit_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="70"
                android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                android:gravity="start"
                android:hint="@string/image_description"
                android:padding="10dp"
                android:textColorHint="@color/grey_hint_color"
                android:textSize="@dimen/text_size_upload_record_dialog" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>