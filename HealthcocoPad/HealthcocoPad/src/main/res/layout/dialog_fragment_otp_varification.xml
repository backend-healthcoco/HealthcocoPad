<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title_save"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fab_margin_left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/fab_margin_left"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_mobile_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/layout_margin"
                    android:paddingRight="@dimen/padding_30_dp"
                    android:paddingTop="@dimen/layout_margin"
                    android:text="@string/enter_otp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_initial_screen_texts"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_enter_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/layout_margin"
                    android:paddingRight="@dimen/padding_30_dp"
                    android:paddingTop="@dimen/layout_margin"
                    android:text="@string/please_enter_the_otp_sent_to_your_phone"
                    android:textSize="@dimen/dialog_title_size" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_first_digit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_padding_5dp"
                        android:clickable="false"
                        android:hint="@string/blank_space"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="@dimen/item_contact_padding"
                        android:paddingRight="@dimen/item_contact_padding"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/padding_20_dp" />

                    <EditText
                        android:id="@+id/edit_second_digit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_padding_5dp"
                        android:clickable="false"
                        android:hint="@string/blank_space"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="@dimen/item_contact_padding"
                        android:paddingRight="@dimen/item_contact_padding"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/padding_20_dp" />

                    <EditText
                        android:id="@+id/edit_third_digit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_padding_5dp"
                        android:clickable="false"
                        android:hint="@string/blank_space"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="@dimen/item_contact_padding"
                        android:paddingRight="@dimen/item_contact_padding"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/padding_20_dp" />

                    <EditText
                        android:id="@+id/edit_forth_digit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_padding_5dp"
                        android:clickable="false"
                        android:hint="@string/blank_space"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="@dimen/item_contact_padding"
                        android:paddingRight="@dimen/item_contact_padding"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/padding_20_dp" />

                    <EditText
                        android:id="@+id/edit_fifth_digit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_padding_5dp"
                        android:clickable="false"
                        android:hint="@string/blank_space"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="@dimen/item_contact_padding"
                        android:paddingRight="@dimen/item_contact_padding"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/padding_20_dp" />

                    <EditText
                        android:id="@+id/edit_sixth_digit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:hint="@string/blank_space"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="@dimen/item_contact_padding"
                        android:paddingRight="@dimen/item_contact_padding"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/padding_20_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/didnt_receive_otp" />

                    <TextView
                        android:id="@+id/tv_resend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/layout_margin"
                        android:paddingLeft="@dimen/layout_margin"
                        android:paddingRight="@dimen/padding_30_dp"
                        android:paddingTop="@dimen/layout_margin"
                        android:text="@string/resend"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_30_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/padding_20_dp"
                        android:background="@drawable/selector_rounded_corners_btn_blue_background_white"
                        android:paddingBottom="@dimen/layout_margin"
                        android:paddingLeft="@dimen/padding_30_dp"
                        android:paddingRight="@dimen/padding_30_dp"
                        android:paddingTop="@dimen/layout_margin"
                        android:text="@string/cancel"
                        android:textColor="@drawable/text_blue_selector"
                        android:textSize="@dimen/edit_button_text_size_18sp" />

                    <TextView
                        android:id="@+id/tv_verify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/selector_rounded_corners_btn_blue"
                        android:paddingBottom="@dimen/layout_margin"
                        android:paddingLeft="@dimen/padding_30_dp"
                        android:paddingRight="@dimen/padding_30_dp"
                        android:paddingTop="@dimen/layout_margin"
                        android:text="@string/verify"
                        android:textColor="@drawable/text_blue_white_selector"
                        android:textSize="@dimen/edit_button_text_size_18sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>