<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent_edit_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_emr_item_background"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/icon_search_normal"
            android:hint="@string/search"
            android:inputType="textNoSuggestions|textFilter"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHint="@color/grey_hint_color"
            android:textSize="@dimen/edit_text_top_search_size" />

        <ImageButton
            android:id="@+id/bt_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@drawable/tab_cancel_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/grey_light_divider"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/suggestion_list"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/bt_add_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_visits_button_margin_8dp"
            android:background="@drawable/shape_rounded_corners_blue_border_solid_gray"
            android:gravity="center"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:gravity="center|start"
                android:paddingBottom="1dp"
                android:paddingLeft="@dimen/item_visits_button_margin_8dp"
                android:paddingRight="@dimen/item_visits_button_margin_8dp"
                android:text="ADD"
                android:textColor="@color/blue_action_bar"
                android:textSize="@dimen/text_size_initial_alphabet_clinic_list" />
        </LinearLayout>

        <!--  <ImageButton
              android:id="@+id/bt_add_new"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:paddingLeft="20dp"
              android:paddingRight="10dp"
              android:src="@drawable/icon_history_selected" />-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/grey_background">

        <TextView
            android:id="@+id/tv_no_drugs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_list_available"
            android:textSize="@dimen/text_size_no_results"
            android:textStyle="bold"
            android:visibility="visible" />

        <com.healthcoco.healthcocopad.views.GridViewLoadMore
            android:id="@+id/gv_suggestions_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:divider="@null"
            android:horizontalSpacing="1dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:overScrollMode="never"
            android:scrollbarStyle="outsideOverlay"
            android:verticalSpacing="1dp" />

        <com.healthcoco.healthcocopad.views.ListViewLoadMore
            android:id="@+id/lv_suggestions_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:scrollbarStyle="outsideOverlay"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_loading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="@dimen/round_progress_bar_size"
            android:layout_height="@dimen/round_progress_bar_size"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center|bottom"
            android:progressDrawable="@drawable/progress_loading"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>