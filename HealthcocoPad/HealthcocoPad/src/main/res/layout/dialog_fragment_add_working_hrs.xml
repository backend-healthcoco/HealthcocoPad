<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title_save" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_20_dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_left_right_add_vital_signs"
            android:layout_weight="2"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/edit_travelling_peroid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                android:gravity="center"
                android:hint="@string/days"
                android:inputType="numberDecimal"
                android:longClickable="false"
                android:paddingLeft="@dimen/layout_padding"
                android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_color"
                android:textSize="@dimen/text_size_add_visits_lable" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/days_per_month"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_color"
                android:textSize="@dimen/text_size_add_visits_lable" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_left_right_add_vital_signs"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/from_time"
                android:paddingLeft="@dimen/layout_padding"
                android:textSize="@dimen/text_size_add_visits_lable" />

            <TextView
                android:id="@+id/tv_from_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                android:longClickable="false"
                android:paddingLeft="@dimen/layout_padding"
                android:paddingTop="@dimen/layout_padding_5dp"
                android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_color"
                android:textSize="@dimen/text_size_add_visits_lable" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/round_progress_bar_size"
            android:layout_marginRight="@dimen/margin_left_right_add_vital_signs"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/to_time"
                android:paddingLeft="@dimen/layout_padding"
                android:textSize="@dimen/text_size_add_visits_lable" />


            <TextView
                android:id="@+id/tv_to_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                android:longClickable="false"
                android:paddingLeft="@dimen/layout_padding"
                android:paddingTop="@dimen/layout_padding_5dp"
                android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_add_visits_lable" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
