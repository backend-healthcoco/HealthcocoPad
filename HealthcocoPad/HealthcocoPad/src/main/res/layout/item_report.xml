<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/item_visits_button_padding_left_right_20dp">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/list_item_image_size"
        android:layout_height="@dimen/list_item_image_size"
        android:layout_gravity="start"
        android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
        android:src="@drawable/ic_icon_list_report" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_padding"
            android:background="@drawable/shape_emr_item_background"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_header_created_by_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_emr_grey_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_report_normal"
                    android:drawablePadding="@dimen/drawable_text_padding"
                    android:gravity="center|start"
                    android:text="26/4/2015"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_emr_date" />

                <LinearLayout
                    android:id="@+id/container_reported_by"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/tv_label_global_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:text="@string/global_record"
                        android:textColor="@color/green_logo"
                        android:textSize="@dimen/text_size_prescribed_by_name"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_rid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:text="@string/rid"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_emr_date" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_report_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_report_type"
                        android:layout_width="@dimen/report_thumbnail"
                        android:layout_height="@dimen/report_thumbnail"
                        android:adjustViewBounds="true"
                        android:background="@color/grey_light_divider"
                        android:contentDescription="@string/content_description"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/tv_report_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_between_padding"
                            android:text="Report1.jpg"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_reports_item_label" />

                        <TextView
                            android:id="@+id/tv_report_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_between_padding"
                            android:text="@string/temp_report_description"
                            android:textColor="@color/grey_light_text"
                            android:textSize="@dimen/text_size_reports_item_desc" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_label_uploaded_by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/uploaded_by"
                                android:textColor="@color/grey_light_text"
                                android:textSize="@dimen/text_size_uploaded_by_name" />

                            <TextView
                                android:id="@+id/tv_uploaded_by"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dr.ASD"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_uploaded_by_name" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_bottom_buttons_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/item_padding"
                    android:layout_marginLeft="@dimen/padding_margin_prescribed_item_center"
                    android:layout_marginRight="@dimen/padding_margin_prescribed_item_center"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey_background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_visits_button_padding_left_right_20dp"
                    android:baselineAligned="false"
                    android:clickable="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/bt_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_visits_button_padding_left_right_20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                            android:clickable="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/selector_btn_add"
                                android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@color/white"
                                android:gravity="center|start"
                                android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                                android:text="@string/important"
                                android:textColor="@drawable/text_selector_grey_blue"
                                android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bt_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_visits_button_padding_left_right_20dp"
                            android:layout_marginRight="@dimen/item_visits_button_padding_left_right_20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                            android:clickable="true"
                            android:gravity="center"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:drawableLeft="@drawable/email_selector"
                                android:drawablePadding="5dp"
                                android:gravity="center|start"
                                android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                                android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                                android:text="@string/email"
                                android:textColor="@drawable/text_selector_grey_blue"
                                android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bt_discard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/item_visits_button_padding_left_right_20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                            android:clickable="true"
                            android:gravity="center"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tv_discard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@color/white"
                                android:drawableLeft="@drawable/discard_selector"
                                android:drawablePadding="5dp"
                                android:gravity="center|start"
                                android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                                android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                                android:text="@string/discard"
                                android:textColor="@drawable/text_selector_grey_blue"
                                android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/bt_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/item_visits_button_padding_left_right_20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                            android:gravity="center"
                            android:padding="5dp"
                            android:visibility="visible">

                            <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                                android:id="@+id/textViewFontAwesome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:background="@color/white"
                                android:drawableStart="@drawable/icon_download_selector"
                                android:gravity="center|start"
                                android:paddingBottom="3dp"
                                android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                                android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                                android:paddingTop="3dp"
                                android:text="@string/open"
                                android:textColor="@drawable/text_selector_grey_blue"
                                android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bt_approve"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/item_visits_button_padding_left_right_20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                            android:gravity="center"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@color/white"
                                android:drawableLeft="@drawable/icon_check_selector"
                                android:drawablePadding="5dp"
                                android:gravity="center|start"
                                android:text="@string/approve"
                                android:textAllCaps="true"
                                android:textColor="@drawable/text_green_dark_grey_selector"
                                android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bt_decline"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/item_visits_button_padding_left_right_20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                            android:gravity="center"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@color/white"
                                android:drawableLeft="@drawable/icon_cross_selector"
                                android:drawablePadding="5dp"
                                android:gravity="center|start"
                                android:text="@string/decline"
                                android:textAllCaps="true"
                                android:textColor="@drawable/text_red_dark_grey_selector"
                                android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/layout_discarded" />
    </FrameLayout>
</LinearLayout>