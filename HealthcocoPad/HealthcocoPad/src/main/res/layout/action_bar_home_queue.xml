<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_home_for_queue"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/blue_action_bar"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/bt_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_description"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:src="@drawable/icon_menu_selector" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/ActionBarTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:paddingRight="50dp"
        android:singleLine="true"
        android:text="@string/calendar"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lv_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/list_item_clinic_profile_padding"
        android:layout_marginRight="@dimen/list_item_clinic_profile_padding"
        android:layout_toEndOf="@+id/bt_menu"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="invisible">


        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="@dimen/queue_doctor_name_textview_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_item_drug_dosage_top_bottom"
            android:background="@drawable/shape_rounded_corners_white_border_solid_blue"
            android:drawableEnd="@drawable/arrow_menu_down"
            android:drawablePadding="@dimen/patient_profile_image_padding"
            android:paddingBottom="@dimen/dotor_profile_edit_text_top_padding"
            android:paddingLeft="@dimen/item_contact_padding"
            android:paddingRight="@dimen/dotor_profile_edit_text_top_padding"
            android:paddingTop="@dimen/dotor_profile_edit_text_top_padding"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/grey_light_text"
            android:textSize="@dimen/text_size_patient_name_visit_fragment"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/image_doctor_in_clinic_profile"
        android:layout_toEndOf="@+id/lv_doctor_name"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_previuos_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_previous" />

        <TextView
            android:id="@+id/tv_selected_date"
            android:layout_width="@dimen/calendar_date_textview_width"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:minHeight="0dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_book_appointment_dialog_fragment" />

        <ImageButton
            android:id="@+id/bt_next_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/image_doctor_in_clinic_profile"
        android:layout_marginRight="@dimen/margin_left_right_add_vital_signs"
        android:layout_toEndOf="@+id/layout_select_date"
        android:background="@drawable/shape_rectangle_translucent_gray_border"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/bt_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_blue_light_grey"
            android:clickable="true"
            android:gravity="center|start"
            android:paddingBottom="@dimen/item_padding_9dp"
            android:paddingLeft="@dimen/text_size_menu_email_address"
            android:paddingRight="@dimen/text_size_menu_email_address"
            android:paddingTop="@dimen/item_padding"
            android:text="@string/queue"
            android:textColor="@drawable/text_selector_white_blue"
            android:textSize="@dimen/text_size_bt_history_edit_sms_email" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_light_divider" />

        <TextView
            android:id="@+id/bt_one_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_blue_light_grey"
            android:clickable="true"
            android:gravity="center|start"
            android:paddingBottom="@dimen/item_padding_9dp"
            android:paddingLeft="@dimen/margin_left_clinical_notes_item_title"
            android:paddingRight="@dimen/margin_left_clinical_notes_item_title"
            android:paddingTop="@dimen/item_padding"
            android:text="@string/one_day_view"
            android:textColor="@drawable/text_selector_white_blue"
            android:textSize="@dimen/text_size_bt_history_edit_sms_email" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_light_divider" />

        <TextView
            android:id="@+id/bt_three_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_blue_light_grey"
            android:clickable="true"
            android:gravity="center|start"
            android:paddingBottom="@dimen/item_padding_9dp"
            android:paddingLeft="@dimen/text_size_menu_separator_item"
            android:paddingRight="@dimen/text_size_menu_separator_item"
            android:paddingTop="@dimen/item_padding"
            android:text="@string/three_day_view"
            android:textColor="@drawable/text_selector_white_blue"
            android:textSize="@dimen/text_size_bt_history_edit_sms_email" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_right_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <ImageButton
            android:id="@+id/bt_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_refresh"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/bt_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/img_filter_contact_selector"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_middle_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/container_right_action"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="10dp"
        android:visibility="gone"></LinearLayout>
</RelativeLayout>