<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title_save" />


    <LinearLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/image_patient_detail_layout"
        android:layout_marginLeft="@dimen/fab_margin_bottom"
        android:layout_marginRight="@dimen/fab_margin_bottom"
        android:layout_marginTop="@dimen/image_patient_detail_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:layout_marginLeft="@dimen/fab_margin_bottom"
            android:layout_marginRight="@dimen/fab_margin_bottom">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fab_margin_bottom"
                android:layout_weight="1"
                android:text="@string/email_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_edit_otp_number"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit_email"
                style="@style/add_drug_detail_edittext_textview_padding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fab_margin_bottom"
                android:layout_weight="3"
                android:hint="@string/please_enter_email_address"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_size_edit_otp_number"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/image_patient_detail_layout"
            android:layout_marginLeft="@dimen/fab_margin_bottom"
            android:layout_marginRight="@dimen/fab_margin_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fab_margin_bottom"
                android:layout_weight="1"
                android:text="@string/password_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_edit_otp_number"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit_password"
                style="@style/add_drug_detail_edittext_textview_padding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fab_margin_bottom"
                android:layout_weight="3"
                android:hint="@string/please_enter_password"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_edit_otp_number"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_pin"
                style="@style/add_drug_detail_edittext_textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fab_margin_bottom"
                android:hint="@string/enter_new_pin"
                android:inputType="textPassword"
                android:maxLength="4"
                android:textSize="@dimen/text_size_edit_otp_number"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
