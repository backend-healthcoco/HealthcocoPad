<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title_save" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/list_item_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/include_header"
                    android:textColor="@color/black_greyish"
                    android:textSize="@dimen/text_size_add_clinical_note_points" />

                <RadioGroup
                    android:id="@+id/rg_include_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/list_item_padding"
                    android:orientation="horizontal">

                    <com.healthcoco.healthcocopad.views.FontAwesomeRadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:button="@android:color/transparent"
                        android:paddingLeft="@dimen/list_item_padding"
                        android:paddingRight="@dimen/list_item_padding"
                        android:tag="@string/yes_capital"
                        android:text="@string/text_check_yes"
                        android:textColor="@drawable/text_light_grey_normal_blue_selected"
                        android:textSize="@dimen/text_size_registration_title" />

                    <com.healthcoco.healthcocopad.views.FontAwesomeRadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:paddingLeft="@dimen/list_item_padding"
                        android:paddingRight="@dimen/list_item_padding"
                        android:tag="@string/no_capital"
                        android:text="@string/text_check_no"
                        android:textColor="@drawable/text_light_grey_normal_blue_selected"
                        android:textSize="@dimen/text_size_registration_title" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/list_item_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/include_logo"
                    android:textColor="@color/black_greyish"
                    android:textSize="@dimen/text_size_add_clinical_note_points" />

                <RadioGroup
                    android:id="@+id/rg_include_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/list_item_padding"
                    android:orientation="horizontal">

                    <com.healthcoco.healthcocopad.views.FontAwesomeRadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:button="@android:color/transparent"
                        android:paddingLeft="@dimen/list_item_padding"
                        android:paddingRight="@dimen/list_item_padding"
                        android:tag="@string/yes_capital"
                        android:text="@string/text_check_yes"
                        android:textColor="@drawable/text_light_grey_normal_blue_selected"
                        android:textSize="@dimen/text_size_registration_title" />

                    <com.healthcoco.healthcocopad.views.FontAwesomeRadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:paddingLeft="@dimen/list_item_padding"
                        android:paddingRight="@dimen/list_item_padding"
                        android:tag="@string/no_capital"
                        android:text="@string/text_check_no"
                        android:textColor="@drawable/text_light_grey_normal_blue_selected"
                        android:textSize="@dimen/text_size_registration_title" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_padding"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/list_item_padding">

            <TextView
                android:id="@+id/tv_top_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/list_item_padding"
                android:layout_marginRight="@dimen/margin_left_right_add_vital_signs"
                android:background="@drawable/selector_solid_gray_dark_gray_border"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/list_item_padding"
                android:text="@string/topleft_text"
                android:textColor="@drawable/text_selector_grey_blue"
                android:textSize="@dimen/text_size_add_clinical_note_points" />

            <TextView
                android:id="@+id/tv_top_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right_add_vital_signs"
                android:layout_marginRight="@dimen/list_item_padding"
                android:background="@drawable/selector_solid_gray_dark_gray_border"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/list_item_padding"
                android:text="@string/topright_text"
                android:textColor="@drawable/text_selector_grey_blue"
                android:textSize="@dimen/text_size_add_clinical_note_points" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical"
            android:padding="@dimen/list_item_padding">

            <ListView
                android:id="@+id/lv_top_left_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <ListView
                android:id="@+id/lv_top_right_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

