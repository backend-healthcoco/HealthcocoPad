<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_tooth_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_color_white_normal_blue_selected"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_tooth"
            android:layout_width="@dimen/treatment_tooth_width"
            android:layout_height="@dimen/treatment_tooth_height"
            android:scaleType="centerInside"
            android:src="@drawable/eleven" />

        <TextView
            android:id="@+id/tv_tooth_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1" />
    </LinearLayout>
</LinearLayout>