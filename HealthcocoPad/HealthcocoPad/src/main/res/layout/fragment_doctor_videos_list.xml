<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_edit_search" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow_bottom" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.healthcoco.healthcocopad.views.ListViewLoadMore
                android:id="@+id/lv_videos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clipToPadding="false"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:paddingBottom="@dimen/list_margin_templates_list"
                android:paddingLeft="@dimen/list_margin_templates_list"
                android:paddingRight="@dimen/list_margin_templates_list"
                android:paddingTop="@dimen/list_margin_templates_list"
                android:scrollbarStyle="outsideOverlay"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_no_videos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/no_videos"
                android:textSize="@dimen/text_size_no_results"
                android:textStyle="bold"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progress_loading"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/round_progress_bar_size"
                android:layout_height="@dimen/round_progress_bar_size"
                android:layout_gravity="center|bottom"
                android:progressDrawable="@drawable/progress_loading"
                android:visibility="gone" />
        </FrameLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>