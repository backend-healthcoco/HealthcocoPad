<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_padding"
        android:background="@drawable/shape_emr_item_background"
        android:orientation="vertical"
        android:padding="@dimen/item_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/drawable_text_padding"
                android:gravity="center|start"
                android:text="26/4/2015"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_select_drug_item" />

            <TextView
                android:id="@+id/tv_invoice_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="@string/invoice_id_receipt"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_select_drug_item" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginTop="@dimen/item_padding"
            android:background="@color/grey_background" />

        <LinearLayout
            android:id="@+id/container_invoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/item_padding"
                android:layout_marginTop="@dimen/item_padding"
                android:background="@color/grey_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_item_padding"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/grand_total_rupees"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_select_drug_item" />

                <TextView
                    android:id="@+id/tv_text_grand_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="5555"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_select_drug_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_item_padding"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/paid_rupees"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_select_drug_item" />

                <TextView
                    android:id="@+id/tv_text_paid_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_select_drug_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_item_padding"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/balance_amount_rupees"
                    android:textColor="@color/red_error"
                    android:textSize="@dimen/text_size_select_drug_item" />

                <TextView
                    android:id="@+id/tv_text_balance_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="400"
                    android:textColor="@color/red_error"
                    android:textSize="@dimen/text_size_select_drug_item" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>