<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_item_padding"
        android:layout_marginLeft="@dimen/emr_item_margin"
        android:layout_marginRight="@dimen/emr_item_margin"
        android:layout_marginTop="@dimen/emr_item_margin"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/assessment_type_height"
            android:layout_marginTop="@dimen/list_item_padding"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_assessment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="Nance appliance"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>