<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:padding="10dp"
        android:text="Clinic Name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_doctor_profile_name"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" />

            <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                android:id="@+id/bt_edit_clinic_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:text="@string/edit_text_icon"
                android:textColor="@color/blue_action_bar"
                android:textSize="@dimen/text_size_fontawesome_edit_icon" />

            <LinearLayout
                android:id="@+id/container_bullets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/layout_clinic_name"
                android:gravity="center"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/layout_clinic_name"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/parent_logo"
                    android:layout_width="@dimen/clinic_logo_size"
                    android:layout_height="@dimen/clinic_logo_size"
                    android:layout_gravity="center">

                    <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                        android:id="@+id/tv_logo_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_circular_border_grey"
                        android:gravity="center"
                        android:text="@string/fa_hospital"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_clinic_logo" />

                    <ProgressBar
                        android:id="@+id/progress_loading"
                        android:layout_width="@dimen/round_progress_bar_size"
                        android:layout_height="@dimen/round_progress_bar_size"
                        android:layout_gravity="center"
                        android:indeterminateDrawable="@drawable/progress_loading"
                        android:max="100"
                        android:progress="50"
                        android:visibility="gone" />

                    <com.healthcoco.healthcocopad.custom.CircularImageView
                        android:id="@+id/iv_logo_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_clinic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black_translucent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_clinic_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_doctor_profile_name" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>


    <com.healthcoco.healthcocopad.custom.ScrollViewWithHeader
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_header"
        android:background="@color/grey_background"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/list_item_clinic_profile_padding">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rounded_corners_item_background"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/clinic_address"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_clinic_profile_clinic_name" />

                        <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                            android:id="@+id/bt_edit_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:paddingBottom="20dp"
                            android:paddingLeft="30dp"
                            android:text="@string/edit_text_icon"
                            android:textColor="@color/blue_action_bar"
                            android:textSize="@dimen/text_size_fontawesome_edit_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/grey_light_text"></View>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textSize="@dimen/text_size_doctor_profile_item_header_child" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/map_clinic_profile"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:id="@+id/container_map_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey_light_divider"
                            android:orientation="vertical"></LinearLayout>

                        <View
                            android:id="@+id/bt_enlarged_map"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:orientation="vertical"></View>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rounded_corners_item_background"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/clinic_hours"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_doctor_profile_item_header" />

                        <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                            android:id="@+id/bt_edit_clinic_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:paddingBottom="20dp"
                            android:paddingLeft="30dp"
                            android:text="@string/edit_text_icon"
                            android:textColor="@color/blue_action_bar"
                            android:textSize="@dimen/text_size_fontawesome_edit_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/grey_light_text"></View>


                    <LinearLayout
                        android:id="@+id/container_clinc_open_24_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="@string/clinic_open"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_doctor_profile_item_header_child" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rounded_left_right_green_rectangle"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="@string/text_24_7"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_doctor_profile_item_header_child" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_clinic_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:visibility="gone">

                        <include layout="@layout/item_clinic_hours_profile_screen" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rounded_corners_item_background"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/contact"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_doctor_profile_item_header" />

                        <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                            android:id="@+id/bt_edit_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:paddingBottom="20dp"
                            android:paddingLeft="30dp"
                            android:text="@string/edit_text_icon"
                            android:textColor="@color/blue_action_bar"
                            android:textSize="@dimen/text_size_fontawesome_edit_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/grey_light_text"></View>

                    <LinearLayout
                        android:id="@+id/container_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <include layout="@layout/item_clinic_contact_profile_screen" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.healthcoco.healthcocopad.custom.ScrollViewWithHeader>
</LinearLayout>