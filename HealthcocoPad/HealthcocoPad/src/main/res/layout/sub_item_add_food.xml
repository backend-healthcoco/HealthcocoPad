<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingTop="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:textColor="@color/black_greyish"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_quantity_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding_5dp"
            android:orientation="vertical"
            android:textColor="@color/grey_dark_text"
            android:textSize="15sp"
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_calarie_food"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:textColor="@color/grey_dark_text"
        android:textSize="15sp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/bt_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/fab_margin_left"
        android:layout_marginRight="@dimen/padding_20_dp"
        android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_edit_selector"
            android:drawablePadding="5dp"
            android:gravity="center|start"
            android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
            android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
            android:text="@string/edit"
            android:textColor="@drawable/text_selector_grey_blue"
            android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
    </LinearLayout>

</LinearLayout>