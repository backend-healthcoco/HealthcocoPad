<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingTop="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:text="@string/groups"
            android:textColor="@color/black_greyish"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_quantity_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding_5dp"
            android:orientation="vertical"
            android:text="@string/groups"
            android:textColor="@color/grey_dark_text"
            android:textSize="15sp"
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_calarie_food"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:text="@string/groups"
        android:textColor="@color/grey_dark_text"
        android:textSize="15sp"
        android:textStyle="italic" />
</LinearLayout>