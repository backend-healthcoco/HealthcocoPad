<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title_save" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/list_item_padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/include_patient_name"
                        android:textColor="@color/black_greyish"
                        android:textSize="@dimen/text_size_add_clinical_note_points" />

                    <TextView
                        android:id="@+id/tv_include_patient_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/list_item_padding"
                        android:paddingTop="@dimen/list_item_padding"
                        android:text="@string/compulsory"
                        android:textSize="@dimen/text_size_add_clinical_note_points" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/list_item_padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/include_mobile_number"
                        android:textColor="@color/black_greyish"
                        android:textSize="@dimen/text_size_add_clinical_note_points" />

                    <RadioGroup
                        android:id="@+id/rg_include_mobile_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/list_item_padding"
                        android:paddingTop="@dimen/list_item_padding">

                        <com.healthcoco.healthcocopad.views.FontAwesomeRadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:button="@android:color/transparent"
                            android:paddingLeft="1dp"
                            android:tag="@string/yes_capital"
                            android:text="@string/text_check_yes"
                            android:textColor="@drawable/text_light_grey_normal_blue_selected"
                            android:textSize="@dimen/text_size_registration_title" />

                        <com.healthcoco.healthcocopad.views.FontAwesomeRadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:button="@android:color/transparent"
                            android:checked="false"
                            android:paddingLeft="1dp"
                            android:tag="@string/no_capital"
                            android:text="@string/text_check_no"
                            android:textColor="@drawable/text_light_grey_normal_blue_selected"
                            android:textSize="@dimen/text_size_registration_title" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/list_item_padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/include_age"
                        android:textColor="@color/black_greyish"
                        android:textSize="@dimen/text_size_add_clinical_note_points" />

                    <RadioGroup
                        android:id="@+id/rg_include_age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/list_item_padding"
                        android:paddingTop="@dimen/list_item_padding">

                        <com.healthcoco.healthcocopad.views.FontAwesomeRadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:button="@android:color/transparent"
                            android:paddingLeft="1dp"
                            android:tag="@string/yes_capital"
                            android:text="@string/text_check_yes"
                            android:textColor="@drawable/text_light_grey_normal_blue_selected"
                            android:textSize="@dimen/text_size_registration_title" />

                        <com.healthcoco.healthcocopad.views.FontAwesomeRadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:button="@android:color/transparent"
                            android:checked="false"
                            android:paddingLeft="1dp"
                            android:tag="@string/no_capital"
                            android:text="@string/text_check_no"
                            android:textColor="@drawable/text_light_grey_normal_blue_selected"
                            android:textSize="@dimen/text_size_registration_title" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
