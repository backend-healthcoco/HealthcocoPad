<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title_save" />

    <TextView
        android:id="@+id/tv_suggesion_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin_bottom"
        android:layout_marginRight="@dimen/fab_margin_bottom"
        android:layout_marginTop="@dimen/fab_margin_bottom"
        android:text="@string/suggestion"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_edit_otp_number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/image_patient_detail_layout"
        android:layout_marginLeft="@dimen/fab_margin_bottom"
        android:layout_marginRight="@dimen/fab_margin_bottom"
        android:layout_marginTop="@dimen/list_item_padding">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin_bottom"
            android:layout_marginRight="@dimen/fab_margin_bottom"
            android:text="@string/password_colon"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_edit_otp_number"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_suggestion"
            style="@style/add_drug_detail_edittext_textview_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fab_margin_bottom"
            android:hint="@string/add_suggestion_hint"
            android:textSize="@dimen/text_size_edit_otp_number" />
    </LinearLayout>

</LinearLayout>
