<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_action_bar"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageview_cross"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/close_selector" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/ActionBarTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button_done"
                android:layout_alignBottom="@+id/button_done"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:singleLine="true"
                android:text="@string/select_tooth"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_done"
                style="@style/ActionBarButtonTextStyle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:text="@string/done"
                android:textSize="17dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_toggle_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/fab_margin_right"
            android:layout_marginTop="@dimen/margin_left_right_add_vital_signs"
            android:text="@string/toggle_to_adult_chart"
            android:textColor="@color/blue_action_bar"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_container_adult_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/fab_margin_right"
        android:layout_marginLeft="@dimen/fab_margin_right"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_quadrant_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_left_right_add_vital_signs"
                android:layout_weight="1"
                android:gravity="bottom|end"
                android:orientation="horizontal"></LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/layout_quadrant_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_left_right_add_vital_signs"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_quadrant_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_left_right_add_vital_signs"
                android:layout_weight="1"
                android:gravity="top|end"
                android:orientation="horizontal">

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/layout_quadrant_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_left_right_add_vital_signs"
                android:layout_weight="1"
                android:gravity="top|start"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_container_baby_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/fab_margin_right"
        android:layout_marginLeft="@dimen/fab_margin_right"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_baby_quadrant_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_left_right_add_vital_signs"
                android:layout_weight="1"
                android:gravity="bottom|end"
                android:orientation="horizontal">

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/layout_baby_quadrant_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_left_right_add_vital_signs"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_baby_quadrant_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_left_right_add_vital_signs"
                android:layout_weight="1"
                android:gravity="top|end"
                android:orientation="horizontal">

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/layout_baby_quadrant_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_left_right_add_vital_signs"
                android:layout_weight="1"
                android:gravity="top|start"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>