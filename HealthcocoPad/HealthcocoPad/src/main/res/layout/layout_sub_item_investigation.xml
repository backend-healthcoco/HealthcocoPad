<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_hint_color"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/parent_permissions_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:gravity="center|start"
            android:padding="15dp"
            android:text="@string/holter"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_add_visits_lable"
            android:visibility="visible" />

        <TextView
            android:id="@+id/edit_permission_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="3.5"
            android:cursorVisible="true"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:hint="@string/holter"
            android:maxLines="1"
            android:padding="15dp"
            android:singleLine="true"
            android:textColorHint="@color/grey_light_text"
            android:textSize="@dimen/text_size_add_visits_lable" />
    </LinearLayout>
</LinearLayout>