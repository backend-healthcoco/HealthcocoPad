<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_permissions_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="@integer/add_visit_left_item_weight"
        android:gravity="center|start"
        android:padding="15dp"
        android:text="@string/holter"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_add_visits_lable"
        android:visibility="visible" />

    <EditText
        android:id="@+id/edit_permission_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_weight="@integer/add_visit_right_item_weight"
        android:background="@drawable/shape_emr_dark_grey_background"
        android:cursorVisible="true"
        android:focusableInTouchMode="true"
        android:gravity="start"
        android:hint="@string/holter"
        android:maxLines="5"
        android:padding="15dp"
        android:textColorHint="@color/grey_light_text"
        android:textSize="@dimen/text_size_add_visits_lable" />
</LinearLayout>