<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_add_treatment_title_padding_10dp"
        android:layout_marginTop="@dimen/item_visits_button_margin_8dp"
        android:layout_marginRight="@dimen/layout_add_treatment_title_padding_10dp"
        android:layout_marginBottom="@dimen/item_visits_button_margin_8dp"
        android:background="@drawable/shape_emr_item_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="@dimen/layout_add_treatment_title_padding_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/layout_add_treatment_title_padding_10dp">

                <TextView
                    android:id="@+id/tv_recipe_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/padding_20_dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_drug_child_lable" />


                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_padding"
                    android:layout_weight="0.3"
                    android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                    android:drawableEnd="@drawable/arrow_down_drug"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:hint="@string/quantity"
                    android:paddingBottom="@dimen/layout_padding_5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_light_text"
                    android:textSize="@dimen/text_size_drug_child_lable" />

                <TextView
                    android:id="@+id/tv_serving_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_padding"
                    android:layout_marginRight="@dimen/padding_20_dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                    android:drawableEnd="@drawable/arrow_down_drug"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:hint="@string/serving"
                    android:paddingBottom="@dimen/layout_padding_5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_light_text"
                    android:textSize="@dimen/text_size_drug_child_lable" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_20_dp"
                    android:text="@string/ingredients"
                    android:textColor="@color/green_logo"
                    android:textSize="@dimen/edit_text_size" />

                <LinearLayout
                    android:id="@+id/container_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_padding"
                    android:layout_marginRight="@dimen/image_patient_deatail"
                    android:layout_marginBottom="@dimen/padding_20_dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_nutrition_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20_dp"
                android:layout_marginRight="@dimen/padding_20_dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_total_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/layout_add_treatment_title_padding_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quantity_colon"
                        android:textSize="@dimen/text_size_drug_child_lable" />

                    <TextView
                        android:id="@+id/tv_total_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/brown_dark"
                        android:textSize="@dimen/text_size_drug_child_lable" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/layout_protien"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/layout_add_treatment_title_padding_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/protein_colon"
                            android:textSize="@dimen/text_size_drug_child_lable" />

                        <TextView
                            android:id="@+id/tv_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown_dark"
                            android:textSize="@dimen/text_size_drug_child_lable" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_fat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/layout_add_treatment_title_padding_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fat_colon"
                            android:textSize="@dimen/text_size_drug_child_lable" />

                        <TextView
                            android:id="@+id/tv_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown_dark"
                            android:textSize="@dimen/text_size_drug_child_lable" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_carbs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/layout_add_treatment_title_padding_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/carbs_colon"
                            android:textSize="@dimen/text_size_drug_child_lable" />

                        <TextView
                            android:id="@+id/tv_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown_dark"
                            android:textSize="@dimen/text_size_drug_child_lable" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_fiber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/layout_add_treatment_title_padding_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fiber_colon"
                            android:textSize="@dimen/text_size_drug_child_lable" />

                        <TextView
                            android:id="@+id/tv_fiber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown_dark"
                            android:textSize="@dimen/text_size_drug_child_lable" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <com.healthcoco.healthcocopad.views.TextViewFontAwesome
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginRight="@dimen/layout_padding_5dp"
            android:adjustViewBounds="true"
            android:gravity="center|start"
            android:paddingLeft="@dimen/padding_20_dp"
            android:paddingBottom="@dimen/layout_padding"
            android:text="@string/fa_times_circle"
            android:textColor="@color/grey_icons"
            android:textSize="25sp" />

    </FrameLayout>

</LinearLayout>