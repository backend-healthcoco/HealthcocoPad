<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:padding="@dimen/list_item_padding">

        <EditText
            android:id="@+id/et_bottom_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/list_item_padding"
            android:layout_weight="0.6"
            android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
            android:cursorVisible="true"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:padding="@dimen/list_item_padding"
            android:singleLine="true"
            android:textColorHint="@color/grey_light_text"
            android:textSize="@dimen/text_size_add_visits_lable" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_text_style_ittalic"
                android:layout_width="@dimen/toggle_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/list_item_padding"
                android:layout_marginRight="@dimen/list_item_padding"
                android:background="@drawable/selector_solid_gray_dark_gray_border"
                android:clickable="true"
                android:gravity="center"
                android:text="I"
                android:textColor="@drawable/text_selector_grey_blue"
                android:textSize="26sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_text_style_bold"
                android:layout_width="@dimen/toggle_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/list_item_padding"
                android:layout_marginRight="@dimen/list_item_padding"
                android:background="@drawable/selector_solid_gray_dark_gray_border"
                android:clickable="true"
                android:gravity="center"
                android:text="B"
                android:textColor="@drawable/text_selector_grey_blue"
                android:textSize="26sp" />

        </LinearLayout>


        <com.healthcoco.healthcocopad.views.CustomAutoCompleteTextView
            android:id="@+id/et_font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_padding"
            android:layout_weight="0.22"
            android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
            android:clickable="true"
            android:cursorVisible="true"
            android:drawableRight="@drawable/arrow_down_drug"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:padding="@dimen/list_item_padding"
            android:text="@string/font_value"
            android:textColorHint="@color/grey_translucent"
            android:textSize="@dimen/text_size_add_visits_lable" />


    </LinearLayout>

</LinearLayout>