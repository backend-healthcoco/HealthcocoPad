<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_left_right_add_vital_signs"
    android:layout_marginRight="@dimen/margin_left_right_add_vital_signs"
    android:layout_marginTop="@dimen/margin_left_right_add_vital_signs"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/item_contact_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/letterhead_header"
        android:textColor="@color/black_greyish"
        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/layout_padding_5dp"
        android:layout_marginTop="@dimen/layout_padding_5dp"
        android:background="@color/grey_item_border" />

    <ImageView
        android:id="@+id/iv_header_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_print_setting_image"
        android:layout_gravity="center"
        android:orientation="horizontal" />

</LinearLayout>