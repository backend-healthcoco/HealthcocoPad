<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:contentInsetEnd="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/bt_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_visits_header_icons">

                <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fa_close"
                    android:textColor="@drawable/text_selector_grey_blue"
                    android:textSize="@dimen/text_size_visits_close_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/close"
                    android:textColor="@drawable/text_selector_grey_blue"
                    android:textSize="@dimen/text_size_visits_close_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_of_visits_button_layout"
                android:layout_toRightOf="@+id/bt_close"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bt_clinical_note"
                    android:layout_width="@dimen/visits_icon_notes"
                    android:layout_height="@dimen/visits_icon_notes"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/padding_visits_header_icons"
                    android:src="@drawable/ic_clinical_notes_visits" />

                <ImageButton
                    android:id="@+id/bt_prescription"
                    android:layout_width="@dimen/visits_icon_drugs"
                    android:layout_height="@dimen/visits_icon_drugs"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/padding_visits_header_icons"
                    android:src="@drawable/ic_drugs_visits" />

                <ImageButton
                    android:id="@+id/bt_templates"
                    android:layout_width="@dimen/visits_icon_drugs"
                    android:layout_height="@dimen/visits_icon_drugs"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/padding_visits_header_icons"
                    android:src="@drawable/ic_templates_visits" />

                <ImageButton
                    android:id="@+id/bt_lab_tests"
                    android:layout_width="@dimen/visits_icon_test"
                    android:layout_height="@dimen/visits_icon_test"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/padding_visits_header_icons"
                    android:src="@drawable/ic_lab_test_visits" />

                <ImageButton
                    android:id="@+id/bt_diagrams"
                    android:layout_width="@dimen/visits_icon_diagram"
                    android:layout_height="@dimen/visits_icon_diagram"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/padding_visits_header_icons"
                    android:src="@drawable/ic_diagram_visits" />

                <ImageButton
                    android:id="@+id/bt_advice"
                    android:layout_width="@dimen/visits_icon_advice"
                    android:layout_height="@dimen/visits_icon_advice"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/padding_visits_header_icons"
                    android:src="@drawable/ic_advice_visit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_visits_header_icons">

                <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_save"
                    android:textColor="@drawable/text_blue_normal_grey_light_selected"
                    android:textSize="@dimen/text_size_visits_close_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/save"
                    android:textColor="@drawable/text_blue_normal_grey_light_selected"
                    android:textSize="@dimen/text_size_visits_close_text" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true">


        <include layout="@layout/layout_item_add_visit" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fl_bt_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:layout_marginRight="@dimen/fab_margin_right"
            android:scaleType="center"
            android:src="@drawable/ic_swap_horiz_white"
            android:visibility="visible"
            app:layout_anchorGravity="bottom|right|end" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>