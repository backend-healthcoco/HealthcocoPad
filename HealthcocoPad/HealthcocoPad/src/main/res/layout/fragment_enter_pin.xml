<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/padding_30_dp"
        android:layout_marginTop="@dimen/padding_30_dp"
        android:background="@drawable/shape_rounded_corners_solid_blue_pinview_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/drawer_left_margin"
        android:paddingRight="@dimen/drawer_left_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/pinlock_title"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_title" />

        <com.healthcoco.healthcocopad.calendar.pinlockview.IndicatorDots
            android:id="@+id/indicator_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dot_margintop" />

        <TextView
            android:id="@+id/attempts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/attempts_margintop"
            android:textColor="@color/text_attempts" />

        <com.healthcoco.healthcocopad.calendar.pinlockview.PinLockView
            android:id="@+id/pinlockView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/lockview_margin" />

        <TextView
            android:id="@+id/tv_forgot_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_contact_padding"
            android:gravity="center"
            android:text="@string/forgot_your_pin"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_title" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_kiosk_home"
        android:layout_width="@dimen/lock_button_size"
        android:layout_height="@dimen/lock_button_size"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/padding_30_dp"
        android:layout_marginTop="@dimen/padding_30_dp"
        android:background="@drawable/kiosk_home_button_selector" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/padding_30_dp"
        android:layout_marginTop="@dimen/padding_20_dp"
        android:background="@drawable/logo_kiosk_home" />

</FrameLayout>
