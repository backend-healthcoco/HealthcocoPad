<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.healthcoco.healthcocopad.custom.ExpandableHeightListView
        android:id="@+id/lv_treatment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_background"
        android:clipToPadding="false"
        android:divider="@null"
        android:overScrollMode="never"
        android:scrollbarStyle="outsideOverlay"
        android:stackFromBottom="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_no_treatment_added"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/no_treatment_added"
        android:textColor="@color/grey_dark_text"
        android:textSize="@dimen/text_size_no_results"
        android:textStyle="bold" />
</LinearLayout>
