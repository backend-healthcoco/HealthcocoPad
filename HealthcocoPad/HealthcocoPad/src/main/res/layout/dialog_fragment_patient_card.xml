<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_action_bar">

        <ImageButton
            android:id="@+id/bt_cross"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/close_selector" />


        <Button
            android:id="@+id/bt_print_patient_card"
            style="@style/ActionBarButtonTextStyle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/icon_print"
            android:drawablePadding="@dimen/layout_margin"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:text="@string/print_patient_card"
            android:textSize="17dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:soundEffectsEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_item_padding"
                android:background="@color/grey_background"
                android:orientation="horizontal"
                android:padding="@dimen/list_item_padding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_item_clinic_profile_padding">

                    <include layout="@layout/layout_image_patient_profile" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_right_add_vital_signs"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/list_item_padding"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_contact_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:maxLines="1"
                                    android:text="Name"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/text_size_contact_list_mobile" />

                                <TextView
                                    android:id="@+id/tv_patient_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/list_item_padding"
                                    android:maxLines="1"
                                    android:text="(P103456790)"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/edit_text_size_dialog" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:visibility="invisible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="@string/gender_colon"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/edit_text_size_dialog" />

                                <TextView
                                    android:id="@+id/tv_patient_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/list_item_padding"
                                    android:maxLines="1"
                                    android:textColor="@color/black_greyish"
                                    android:textSize="@dimen/edit_text_size_dialog" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_padding_5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_contact_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/list_item_padding"
                                android:layout_marginTop="@dimen/layout_padding_5dp"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:text="1234567890"
                                android:textSize="@dimen/edit_text_size_dialog" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:visibility="invisible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="@string/age_colon"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/edit_text_size_dialog" />

                                <TextView
                                    android:id="@+id/tv_patient_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/list_item_padding"
                                    android:maxLines="1"
                                    android:textColor="@color/black_greyish"
                                    android:textSize="@dimen/edit_text_size_dialog" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/initial_screen_text_logo_margin"
                android:paddingRight="@dimen/initial_screen_text_logo_margin"
                android:paddingTop="@dimen/list_item_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:maxLines="1"
                    android:text="@string/starts_colon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edit_text_size_dialog" />

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/black_greyish"
                    android:textSize="@dimen/edit_text_size_dialog" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/black_greyish"
                    android:textSize="@dimen/edit_text_size_dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/initial_screen_text_logo_margin"
                android:paddingRight="@dimen/initial_screen_text_logo_margin"
                android:paddingTop="@dimen/list_item_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:maxLines="1"
                    android:text="@string/ends_colon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edit_text_size_dialog" />

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/black_greyish"
                    android:textSize="@dimen/edit_text_size_dialog" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/black_greyish"
                    android:textSize="@dimen/edit_text_size_dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/initial_screen_text_logo_margin"
                android:paddingRight="@dimen/initial_screen_text_logo_margin"
                android:paddingTop="@dimen/list_item_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:maxLines="1"
                    android:text="@string/doctor"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edit_text_size_dialog" />

                <TextView
                    android:id="@+id/tv_doctor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/black_greyish"
                    android:textSize="@dimen/edit_text_size_dialog" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/black_greyish"
                    android:textSize="@dimen/edit_text_size_dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_left_right_add_vital_signs"
                android:paddingLeft="@dimen/initial_screen_text_logo_margin"
                android:paddingRight="@dimen/initial_screen_text_logo_margin"
                android:paddingTop="@dimen/list_item_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:maxLines="1"
                    android:text="@string/general_note_colon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edit_text_size_dialog" />

                <EditText
                    android:id="@+id/et_general_notes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/list_item_padding"
                    android:layout_weight="2"
                    android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                    android:gravity="start"
                    android:lines="3"
                    android:maxLines="3"
                    android:padding="@dimen/layout_padding_5dp"
                    android:textColor="@color/black_greyish"
                    android:textSize="@dimen/edit_text_size_dialog" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
