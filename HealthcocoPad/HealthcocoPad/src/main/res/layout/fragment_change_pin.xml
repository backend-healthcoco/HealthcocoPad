<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_rounded_corners_solid_blue_pinview_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/fab_margin_left"
        android:paddingLeft="@dimen/drawer_left_margin"
        android:paddingRight="@dimen/drawer_left_margin"
        android:paddingTop="@dimen/fab_margin_left">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enter_new_pin"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_title" />


        <TextView
            android:id="@+id/tv_enter_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dot_margintop"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_title" />

        <TextView
            android:id="@+id/attempts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/attempts_margintop"
            android:textColor="@color/text_attempts" />

        <com.healthcoco.healthcocopad.calendar.pinlockview.PinLockView
            android:id="@+id/pinlockView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/lockview_margin" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/attempts_margintop"
            android:paddingBottom="@dimen/layout_padding_5dp"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingTop="@dimen/layout_margin"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_title" />

    </LinearLayout>

</FrameLayout>
