<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title_save" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin_left"
        android:layout_marginLeft="@dimen/fab_margin_right"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:layout_marginTop="@dimen/margin_left_right_add_vital_signs"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_colon"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_edit_otp_number" />

        <TextView
            android:id="@+id/tv_appointment_status"
            style="@style/add_drug_detail_edittext_textview_padding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin_left"
            android:layout_marginLeft="@dimen/fab_margin_left"
            android:layout_marginRight="@dimen/fab_margin_left"
            android:layout_weight="1"
            android:drawableEnd="@drawable/arrow_down_drug"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/text_size_edit_otp_number" />

    </LinearLayout>

</LinearLayout>
