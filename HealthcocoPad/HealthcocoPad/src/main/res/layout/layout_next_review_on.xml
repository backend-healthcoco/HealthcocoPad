<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_selected_date"
            style="@style/registration_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_down_drug"
            android:gravity="center"
            android:text="@string/date"
            android:textColor="@color/grey_dark_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_selected_time_slot"
            style="@style/registration_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_down_drug"
            android:gravity="center"
            android:hint="@string/time"
            android:singleLine="true"
            android:textColor="@drawable/text_black_normal_red_error_selector"
            android:textColorHint="@drawable/text_grey_hint_normal_red_error_selector"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <com.healthcoco.healthcocopad.views.TextViewFontAwesome
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:gravity="center|start"
            android:layout_marginRight="10dp"
            android:text="@string/notify_patient_via"
            android:textColor="@color/black_greyish"
            android:textSize="@dimen/text_size_book_appointment_dialog_fragment" />

        <com.healthcoco.healthcocopad.views.FontAwesomeCheckbox
            android:id="@+id/cb_sms_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:paddingLeft="1dp"
            android:text="@string/text_check_in_square_sms"
            android:textColor="@drawable/text_light_grey_normal_blue_selected"
            android:textSize="@dimen/text_size_book_appointment_dialog_fragment" />

        <com.healthcoco.healthcocopad.views.FontAwesomeCheckbox
            android:id="@+id/cb_email_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:checked="false"
            android:paddingLeft="1dp"
            android:text="@string/text_check_in_sqaure_email"
            android:textColor="@drawable/text_light_grey_normal_blue_selected"
            android:textSize="@dimen/text_size_book_appointment_dialog_fragment" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rounded_corners_solid_blue"
        android:gravity="center|bottom"
        android:layout_gravity="bottom"
        android:minHeight="0dp"
        android:padding="8dp"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>