<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center|start|top">

    <com.healthcoco.healthcocopad.views.TextViewFontAwesome
        android:id="@+id/tv_bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_arrow_filled_right"
        android:textColor="@color/blue_translucent"
        android:textSize="15sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="10dp"
        android:textColor="@color/grey_dark_text"
        android:textSize="@dimen/text_size_drug_dose_item_dosage_direction_instruction" />
</LinearLayout>