<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_padding_5dp"
    android:background="@drawable/shadow_popup_new"
    android:orientation="vertical"
    android:padding="@dimen/padding_20_dp">

    <TextView
        android:id="@+id/tv_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option"
        android:textColor="@color/green_logo"
        android:textSize="@dimen/text_size_add_clinical_note_points"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/container_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_padding" />

</LinearLayout>