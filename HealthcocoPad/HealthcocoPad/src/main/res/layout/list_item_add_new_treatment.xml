<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_add_treatment_title_padding_10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/layout_add_treatment_title_padding_10dp">

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/padding_20_dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_drug_child_lable" />


        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_20_dp"
            android:layout_weight="0.4"
            android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
            android:drawableEnd="@drawable/arrow_down_drug"
            android:drawablePadding="5dp"
            android:hint="@string/percentage"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_light_text"
            android:textSize="@dimen/text_size_drug_child_lable" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_padding"
            android:layout_weight="0.4"
            android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
            android:drawableEnd="@drawable/arrow_down_drug"
            android:drawablePadding="5dp"
            android:hint="@string/percentage"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_light_text"
            android:textSize="@dimen/text_size_drug_child_lable" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="@dimen/layout_add_treatment_title_padding_10dp">

        </LinearLayout>


        <com.healthcoco.healthcocopad.views.TextViewFontAwesome
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:adjustViewBounds="true"
            android:gravity="center|start"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:text="@string/fa_times_circle"
            android:textColor="@color/grey_icons"
            android:textSize="25sp" />

    </FrameLayout>

</LinearLayout>