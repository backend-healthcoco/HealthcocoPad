<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_corners_grey_border_solid_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="itemName"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_settings_item" />

            <TextView
                android:id="@+id/tv_synced_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="itemName"
                android:textColor="@color/grey_dark_text"
                android:textSize="@dimen/edit_text_size_dialog" />
        </LinearLayout>

        <com.healthcoco.healthcocopad.views.TextViewFontAwesome
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/patient_profile_image_padding"
            android:text="@string/fa_refresh"
            android:textColor="@color/black"
            android:textSize="@dimen/icon_history_size" />
    </LinearLayout>
</LinearLayout>