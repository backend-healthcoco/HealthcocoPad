<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke android:width="@dimen/radio_btn_stoke_width" android:color="@color/grey_light_text" />
            <size android:width="@dimen/radio_btn_border_ht_wdt" android:height="@dimen/radio_btn_border_ht_wdt" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="@dimen/radio_btn_stoke_width" android:color="@color/blue_action_bar" />
                    <size android:width="@dimen/radio_btn_border_ht_wdt" android:height="@dimen/radio_btn_border_ht_wdt" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape android:shape="oval">
                    <solid android:width="1dp" android:color="@color/blue_action_bar" />
                    <size android:width="8dp" android:height="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>