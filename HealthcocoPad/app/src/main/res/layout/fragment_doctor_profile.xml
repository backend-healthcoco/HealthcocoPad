<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_top"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/iv_doctor_cover_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_doctor_img"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_translucent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="10dp">

            <include layout="@layout/layout_image_patient_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/shadoweffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_doctor_profile_name"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_specialities"
                        style="@style/shadoweffect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_doctor_profile_speciality" />

                    <TextView
                        android:id="@+id/tv_experience"
                        style="@style/shadoweffect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_doctor_profile_speciality" />

                    <TextView
                        android:id="@+id/tv_gender_date"
                        style="@style/shadoweffect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_doctor_profile_speciality" />
                </LinearLayout>

            </LinearLayout>


            <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                android:id="@+id/bt_edit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/edit_text_icon"
                android:textColor="@color/blue_action_bar"
                android:textSize="@dimen/text_size_fontawesome_edit_icon" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_my_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bottom_line_white_blue_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/my_profile"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_doctor_profile_tab" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/grey_dark_text" />

        <TextView
            android:id="@+id/tab_my_clinic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bottom_line_white_blue_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/my_clinic"
            android:textColor="@color/black" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_background"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/list_item_clinic_profile_padding"
            android:paddingRight="@dimen/list_item_clinic_profile_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/grey_item_border" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/toolbar_drop_shadow" />
    </RelativeLayout>
</LinearLayout>