<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|start"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv_initial_aplhabet"
        style="@style/TextRobotoStyle"
        android:layout_width="@dimen/initial_alphabet_patient_profile_menu"
        android:layout_height="@dimen/initial_alphabet_patient_profile_menu"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_patients_list_initial_alphabet" />

    <com.healthcoco.healthcocoplus.custom.CircularImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/image_patient_profile_menu"
        android:layout_height="@dimen/image_patient_profile_menu"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:civ_border_overlay="true"
        app:civ_border_width="@dimen/border_profile_images" />
</FrameLayout>