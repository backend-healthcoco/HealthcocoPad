<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_height_diagram_list_item"
    android:layout_height="@dimen/width_height_diagram_list_item"
    android:background="@drawable/shape_rectangle_translucent_blue_border"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/width_height_diagram_list_item"
        android:layout_height="@dimen/width_height_diagram_list_item"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_diagram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />


        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress_loading"
            android:max="100"
            android:progress="50"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/black_translucent_more"
        android:gravity="center"
        android:maxLines="2"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_clinical_notes_item_diagram_tags" />

</RelativeLayout>