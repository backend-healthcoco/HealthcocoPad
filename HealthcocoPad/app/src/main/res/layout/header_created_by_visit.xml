<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_emr_grey_background"
    android:gravity="center"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="21/03/2017"
        android:textColor="@color/black"
        android:textSize="@dimen/header_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_label_created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="@string/created_by"
            android:textColor="@color/grey_dark_text"
            android:textSize="@dimen/header_text_size" />

        <TextView
            android:id="@+id/tv_created_by_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Dr."
            android:textColor="@color/black"
            android:textSize="@dimen/header_text_size" />

        <TextView
            android:id="@+id/tv_vid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/vid"
            android:textColor="@color/black"
            android:textSize="@dimen/header_text_size" />
    </LinearLayout>
</RelativeLayout>
