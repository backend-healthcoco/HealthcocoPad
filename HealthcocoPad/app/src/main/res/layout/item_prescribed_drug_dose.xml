<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_drugs_detail_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_drug_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black_greyish"
        android:textSize="@dimen/text_size_drug_child_lable" />

    <TextView
        android:id="@+id/tv_drug_frequency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black_greyish"
        android:textSize="@dimen/text_size_drug_child_lable" />

    <TextView
        android:id="@+id/tv_drug_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black_greyish"
        android:textSize="@dimen/text_size_drug_child_lable" />

    <TextView
        android:id="@+id/tv_drug_direction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black_greyish"
        android:textSize="@dimen/text_size_drug_child_lable" />

    <TextView
        android:id="@+id/tv_drug_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black_greyish"
        android:textSize="@dimen/text_size_drug_child_lable" />
</LinearLayout>
