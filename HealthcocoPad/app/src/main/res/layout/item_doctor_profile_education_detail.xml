<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_education_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_doctor_profile_item_header_child" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/colon"
        android:textColor="@color/grey_dark_text" />

    <TextView
        android:id="@+id/tv_education_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temp EducationDeatil"
        android:textColor="@color/grey_dark_text"
        android:textSize="@dimen/text_size_doctor_profile_item_header_child" />
</LinearLayout>