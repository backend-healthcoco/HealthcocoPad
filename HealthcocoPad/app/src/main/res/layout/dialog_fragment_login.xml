<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:minHeight="0dp"
            android:padding="8dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/blue_action_bar" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/app_icon" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">


            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:gravity="center|top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.healthcoco.healthcocoplus.views.CustomAutoCompleteTextView
                        android:id="@+id/autotv_title"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/arrow_down_drug"
                        android:drawablePadding="3dp"
                        android:drawableRight="@drawable/arrow_down_drug"
                        android:editable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:gravity="center|bottom|start"
                        android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                        android:paddingTop="@dimen/login_edit_text_bottom_padding"
                        android:text="@string/title_dr"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_signup" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp">

                        <EditText
                            android:id="@+id/edit_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                            android:hint="@string/full_name"
                            android:inputType="textCapWords"
                            android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                            android:paddingTop="@dimen/login_edit_text_bottom_padding"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_hint_color"
                            android:textSize="@dimen/text_size_signup" />
                    </android.support.design.widget.TextInputLayout>

                    <requestFocus></requestFocus>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rg_gender_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="visible"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_blue_color"
                        android:checked="false"
                        android:paddingLeft="1dp"
                        android:text="@string/male"
                        android:textColor="@drawable/text_light_grey_normal_blue_selected"
                        android:textSize="@dimen/text_size_signup" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_blue_color"
                        android:checked="false"
                        android:text="@string/female"
                        android:textColor="@drawable/text_light_grey_normal_blue_selected"
                        android:textSize="@dimen/text_size_signup" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:gravity="bottom|center"
                        android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                        android:paddingTop="@dimen/login_edit_text_bottom_padding"
                        android:singleLine="true"
                        android:text="@string/text_91"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_hint_color"
                        android:textSize="@dimen/text_size_signup" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edit_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                            android:hint="@string/mobile_number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                            android:paddingTop="@dimen/login_edit_text_bottom_padding"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_hint_color"
                            android:textSize="@dimen/text_size_signup" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edit_email_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                        android:hint="@string/email_address"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                        android:paddingTop="@dimen/login_edit_text_bottom_padding"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_hint_color"
                        android:textSize="@dimen/text_size_signup" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/speciality"
                    android:textColor="@color/grey_light_text"
                    android:textSize="@dimen/text_size_floating_label"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_speciality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                    android:clickable="true"
                    android:drawableRight="@drawable/arrow_down_drug"
                    android:hint="@string/select_speciality"
                    android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                    android:paddingTop="@dimen/login_edit_text_bottom_padding"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_hint_color"
                    android:textSize="@dimen/text_size_signup" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edit_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bottom_line_grey_blue_solid_white_selector"
                        android:hint="@string/city"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="@dimen/login_edit_text_bottom_padding"
                        android:paddingTop="@dimen/login_edit_text_bottom_padding"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_hint_color"
                        android:textSize="@dimen/text_size_signup" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linear_layout"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/login_edit_text_bottom_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:minHeight="0dp"
            android:text="@string/signin_accept_terms_and_conditions"
            android:textAllCaps="false"
            android:textColor="@color/grey_dark_text"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_terms_of_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:text="@string/underlined_terms_of_service"
                android:textAllCaps="false"
                android:textColor="@color/grey_dark_text"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:text="@string/and"
                android:textAllCaps="false"
                android:textColor="@color/grey_dark_text"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:minHeight="0dp"
                android:text="@string/underlined_privacy_policy"
                android:textAllCaps="false"
                android:textColor="@color/grey_dark_text"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey_light_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/bt_alreay_have_an_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="@string/already_have_an_account"
                android:textAllCaps="false"
                android:textColor="@color/blue_action_bar"
                android:textSize="12dp"></Button>

            <Button
                android:id="@+id/bt_get_started"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/shape_rounded_corners_solid_blue"
                android:gravity="center"
                android:minHeight="0dp"
                android:padding="8dp"
                android:text="@string/get_started"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>