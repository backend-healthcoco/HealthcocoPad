<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/width_height_clinical_note_item_diagram"
        android:layout_height="@dimen/width_height_clinical_note_item_diagram"
        android:background="@drawable/shape_rectangle_translucent_blue_border"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_diagram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/black_translucent_more"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_clinical_notes_item_diagram_tags" />

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress_loading"
            android:max="100"
            android:progress="50"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>