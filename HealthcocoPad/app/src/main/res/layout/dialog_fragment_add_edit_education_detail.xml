<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title_save"></include>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_background"
        android:orientation="vertical">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarStyle="outsideOverlay">

                <LinearLayout
                    android:id="@+id/container_items_education_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/list_item_clinic_profile_padding"
                    android:paddingRight="@dimen/list_item_clinic_profile_padding"
                    android:paddingTop="@dimen/list_item_clinic_profile_padding" />
            </ScrollView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_add_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/fab_margin_bottom"
                android:layout_marginRight="@dimen/fab_margin_right"
                android:elevation="10dp"
                android:src="@drawable/icon_add_education"
                android:visibility="visible"
                app:fabSize="normal"
                app:pressedTranslationZ="10dp" />
        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>
</LinearLayout>