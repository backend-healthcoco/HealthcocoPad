<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/layout_dialog_search" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <com.healthcoco.healthcocoplus.views.ListViewLoadMore
                android:id="@+id/lv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clipToPadding="false"
                android:divider="@null"
                android:scrollbarStyle="outsideOverlay"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progress_loading"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/round_progress_bar_size"
                android:layout_height="@dimen/round_progress_bar_size"
                android:layout_gravity="center|bottom"
                android:progressDrawable="@drawable/progress_loading"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_no_result_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:text="@string/no_result_found_for_your_search"
                android:textSize="@dimen/text_size_no_results"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

    <include layout="@layout/loading_healthcoco_overlay" />

</FrameLayout>
