<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:orientation="horizontal"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:src="@drawable/item_visit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_emr_item_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_emr_grey_background"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="21/03/2017"
                android:textColor="@color/black"
                android:textSize="@dimen/header_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label_created_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="@string/created_by"
                    android:textColor="@color/grey_dark_text"
                    android:textSize="@dimen/header_text_size" />

                <TextView
                    android:id="@+id/tv_created_by_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Dr."
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size" />

                <TextView
                    android:id="@+id/tv_vid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/vid"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="@string/vital_signs"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bt"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />

                    <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                        android:id="@+id/tv_body_temprature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/no_text_dash"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label_child" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/faranheit"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/wt"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />

                    <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/no_text_dash"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label_child" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/kilograms"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/hr"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />

                    <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                        android:id="@+id/tv_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/no_text_dash"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label_child" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/beats_per_min"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bp"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />

                    <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                        android:id="@+id/tv_blood_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/no_text_dash"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label_child" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bp_mm_hg"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/rr"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />

                    <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                        android:id="@+id/tv_respiratory_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/no_text_dash"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label_child" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/breaths_per_min"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/spo2_colon"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />

                    <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                        android:id="@+id/tv_spo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/no_text_dash"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label_child" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/spo2_percent"
                        android:textColor="@color/grey_dark_text"
                        android:textSize="@dimen/text_size_add_clinical_note_vital_signs_label" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>