<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_item_padding"
        android:background="@drawable/shape_emr_item_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/item_padding">

        <include layout="@layout/header_created_by_visit" />

        <LinearLayout
            android:id="@+id/container_header_created_by_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_report_normal"
                android:drawablePadding="@dimen/drawable_text_padding"
                android:gravity="center|start"
                android:text="26/4/2015"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_emr_date" />

            <TextView
                android:id="@+id/tv_rid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="@string/rid"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_emr_date" />

            <ImageButton
                android:id="@+id/bt_options"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:contentDescription="@string/content_description"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/arrow_down_drug" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_report_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/item_padding"
                android:layout_marginTop="@dimen/item_padding"
                android:background="@color/grey_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_report_type"
                    android:layout_width="@dimen/report_thumbnail"
                    android:layout_height="@dimen/report_thumbnail"
                    android:adjustViewBounds="true"
                    android:background="@color/grey_light_divider"
                    android:contentDescription="@string/content_description"
                    android:scaleType="centerCrop" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/tv_report_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_between_padding"
                        android:text="Report1.jpg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_reports_item_label" />

                    <TextView
                        android:id="@+id/tv_report_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_between_padding"
                        android:text="@string/temp_report_description"
                        android:textColor="@color/grey_light_text"
                        android:textSize="@dimen/text_size_reports_item_desc" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_label_global_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/global_record"
                            android:textColor="@color/green_logo"
                            android:textSize="@dimen/text_size_uploaded_by_name"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_label_uploaded_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/uploaded_by"
                            android:textColor="@color/grey_light_text"
                            android:textSize="@dimen/text_size_uploaded_by_name" />

                        <TextView
                            android:id="@+id/tv_uploaded_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dr.ASD"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_uploaded_by_name" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_bottom_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/item_padding"
                android:layout_marginTop="@dimen/item_padding"
                android:background="@color/grey_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/bt_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/selector_btn_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:gravity="center|start"
                        android:text="@string/important"
                        android:textAllCaps="true"
                        android:textColor="@drawable/text_selector_grey_blue"
                        android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_open"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/icon_download_selector"
                        android:gravity="center|start"
                        android:text="@string/open"
                        android:textColor="@drawable/text_selector_grey_blue"
                        android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_print"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/icon_print_selector"
                        android:drawablePadding="5dp"
                        android:gravity="center|start"
                        android:text="@string/print"
                        android:textAllCaps="true"
                        android:textColor="@drawable/text_selector_grey_blue"
                        android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/email_selector"
                        android:drawablePadding="5dp"
                        android:gravity="center|start"
                        android:text="@string/email_caps"
                        android:textColor="@drawable/text_selector_grey_blue"
                        android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_approve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/icon_check_selector"
                        android:drawablePadding="5dp"
                        android:gravity="center|start"
                        android:text="@string/approve"
                        android:textAllCaps="true"
                        android:textColor="@drawable/text_green_dark_grey_selector"
                        android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_decline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/icon_cross_selector"
                        android:drawablePadding="5dp"
                        android:gravity="center|start"
                        android:text="@string/decline"
                        android:textAllCaps="true"
                        android:textColor="@drawable/text_red_dark_grey_selector"
                        android:textSize="@dimen/text_size_bt_history_edit_sms_email" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_discarded" />
</FrameLayout>