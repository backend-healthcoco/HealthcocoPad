<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_height_clinical_note_item_diagram"
    android:layout_height="@dimen/width_height_clinical_note_item_diagram"
    android:layout_margin="15dp">

    <FrameLayout
        android:layout_width="@dimen/width_height_clinical_note_item_diagram"
        android:layout_height="@dimen/width_height_clinical_note_item_diagram"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_diagram"
            android:layout_width="@dimen/width_height_clinical_note_item_diagram"
            android:layout_height="@dimen/width_height_clinical_note_item_diagram"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rectangle_translucent_blue_border"
            android:padding="1dp"
            android:src="@color/grey_light_text" />

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress_loading"
            android:max="100"
            android:progress="50"
            android:visibility="gone" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/bt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|end"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_description"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:src="@android:drawable/presence_offline" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="@dimen/width_height_clinical_note_item_diagram"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/black_translucent_more"
        android:gravity="center"
        android:maxLines="2"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_clinical_notes_item_diagram_tags" />

</RelativeLayout>