<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_drugs_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/drug_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_drug_lable" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/frequency"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_drug_lable" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/duration"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_drug_lable" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/direction"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_drug_lable" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/instruction"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_drug_lable" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_drugs_deatil_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_drug_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_greyish"
            android:textSize="@dimen/text_size_drug_child_lable" />

        <TextView
            android:id="@+id/tv_drug_frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_greyish"
            android:textSize="@dimen/text_size_drug_lable" />

        <TextView
            android:id="@+id/tv_drug_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_greyish"
            android:textSize="@dimen/text_size_drug_lable" />

        <TextView
            android:id="@+id/tv_drug_direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_greyish"
            android:textSize="@dimen/text_size_drug_lable" />

        <TextView
            android:id="@+id/tv_drug_instruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_greyish"
            android:textSize="@dimen/text_size_drug_lable" />
    </LinearLayout>

</LinearLayout>