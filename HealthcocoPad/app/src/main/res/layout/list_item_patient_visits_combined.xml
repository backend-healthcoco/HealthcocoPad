<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:orientation="horizontal"
    android:padding="@dimen/item_visits_button_padding_left_right_20dp">

    <!--<ImageView-->
    <!--android:layout_width="@dimen/visits_icon_with_circle_size"-->
    <!--android:layout_height="@dimen/visits_icon_with_circle_size"-->
    <!--android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"-->
    <!--android:src="@drawable/item_visit" />-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_emr_item_background"
        android:orientation="vertical">

        <include layout="@layout/header_created_by_visit"></include>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/layout_sub_item_clinical_note"></include>
            </LinearLayout>

            <include
                android:id="@+id/layout_discarded_clinical_note"
                layout="@layout/layout_discarded" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/container_prescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/layout_sub_item_prescription" />
            </LinearLayout>

            <include
                android:id="@+id/layout_discarded_prescription"
                layout="@layout/layout_discarded" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/parent_treatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <include layout="@layout/layout_sub_item_treatment" />
            </LinearLayout>

            <include
                android:id="@+id/layout_discarded_treatment"
                layout="@layout/layout_discarded" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/item_padding"
            android:layout_marginRight="@dimen/item_padding"
            android:layout_marginTop="@dimen/item_visits_button_padding_top_bottom_8dp"
            android:background="@color/grey_background" />

        <RelativeLayout
            android:id="@+id/container_bottom_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_visits_button_padding_left_right_20dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                    android:id="@+id/bt_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_visits_button_margin_8dp"
                    android:layout_marginRight="@dimen/item_visits_button_margin_8dp"
                    android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                    android:paddingBottom="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingTop="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:text="@string/fa_important"
                    android:textColor="@drawable/text_selector_grey_blue"
                    android:textSize="@dimen/text_size_bottom_button"
                    android:visibility="gone" />

                <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                    android:id="@+id/bt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/item_visits_button_margin_8dp"
                    android:layout_marginRight="@dimen/item_visits_button_margin_8dp"
                    android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                    android:gravity="center"
                    android:paddingBottom="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingTop="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:text="@string/fa_email"
                    android:textColor="@drawable/text_selector_grey_blue"
                    android:textSize="@dimen/text_size_bottom_button" />

                <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                    android:id="@+id/bt_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_visits_button_margin_8dp"
                    android:layout_marginRight="@dimen/item_visits_button_margin_8dp"
                    android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                    android:paddingBottom="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingTop="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:text="@string/fa_sms"
                    android:textColor="@drawable/text_selector_grey_blue"
                    android:textSize="@dimen/text_size_bottom_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                    android:id="@+id/bt_save_as_template"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_visits_button_margin_8dp"
                    android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                    android:paddingBottom="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingTop="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:text="@string/fa_save_as_template"
                    android:textColor="@drawable/text_selector_grey_blue"
                    android:textSize="@dimen/text_size_bottom_button" />

                <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                    android:id="@+id/bt_clone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_visits_button_margin_8dp"
                    android:layout_marginRight="@dimen/item_visits_button_margin_8dp"
                    android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                    android:paddingBottom="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingTop="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:text="@string/fa_clone"
                    android:textColor="@drawable/text_selector_grey_blue"
                    android:textSize="@dimen/text_size_bottom_button" />

                <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                    android:id="@+id/bt_print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_visits_button_margin_8dp"
                    android:layout_marginRight="@dimen/item_visits_button_margin_8dp"
                    android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                    android:gravity="center"
                    android:paddingBottom="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingTop="@dimen/item_visits_button_padding_top_bottom_8dp"
                    android:text="@string/fa_print"
                    android:textColor="@drawable/text_selector_grey_blue"
                    android:textSize="@dimen/text_size_bottom_button" />

                <com.healthcoco.healthcocopad.views.TextViewFontAwesome
                    android:id="@+id/bt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_visits_button_margin_8dp"
                    android:layout_marginRight="@dimen/item_visits_button_margin_8dp"
                    android:background="@drawable/shape_rounded_corners_item_background_dark_grey"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingRight="@dimen/item_visits_button_padding_left_right_20dp"
                    android:paddingTop="8dp"
                    android:text="@string/fa_edit"
                    android:textColor="@drawable/text_selector_grey_blue"
                    android:textSize="@dimen/text_size_bottom_button" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>