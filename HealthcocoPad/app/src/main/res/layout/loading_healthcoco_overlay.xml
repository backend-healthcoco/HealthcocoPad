<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <FrameLayout
        android:id="@+id/progress_with_round_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/round_progress_bar_background_shadow"
            android:layout_height="@dimen/round_progress_bar_background_shadow"
            android:background="@drawable/shape_circle_shadow"
            android:paddingBottom="2dp"
            android:paddingRight="1dp"
            android:src="@drawable/shape_circle_solid_light_grey" />

        <ProgressBar
            android:id="@+id/progress_loading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="@dimen/round_progress_bar_size"
            android:layout_height="@dimen/round_progress_bar_size"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress_loading"
            android:indeterminateDuration="1000"
            android:paddingBottom="2dp"
            android:paddingRight="1dp"
            android:visibility="visible" />
    </FrameLayout>
</LinearLayout>