<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.healthcoco.healthcocopad.views.ListViewLoadMore
        android:id="@+id/lv_visits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/list_item_padding"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbarStyle="outsideOverlay"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_no_visits_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_visits_found"
        android:textSize="@dimen/text_size_no_results"
        android:textStyle="bold"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progress_loading"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="@dimen/round_progress_bar_size"
        android:layout_height="@dimen/round_progress_bar_size"
        android:layout_gravity="center|bottom"
        android:progressDrawable="@drawable/progress_loading"
        android:visibility="gone" />
</FrameLayout>