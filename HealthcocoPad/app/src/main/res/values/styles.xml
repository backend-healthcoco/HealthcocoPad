<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_action_bar</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorAccent">@color/blue_action_bar</item>
    </style>
    <!--LoginSignup button styles-->
    <style name="ButtonLoginSignupStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">
            @drawable/shape_rounded_corners_grey_border_solid_lighter_grey
        </item>
        <item name="android:textColor">@drawable/text_white_normal_translucent_selected</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">@dimen/btn_padding</item>
    </style>

    <style name="Dialog_Transparent_Background">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogBottomEnterExitAnimation</item>-->
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/actionbar_title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRobotoStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextLabelLayoutStyle" parent="Theme.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/grey_light_text</item>
        <item name="android:textSize">20sp</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/red_error</item>
        <item name="colorControlNormal">@color/green_logo</item>
        <item name="colorControlActivated">@color/blue_action_bar</item>
        <item name="colorControlHighlight">@color/grey_dark_text</item>
    </style>

    <style name="TextRobotoStyleThin">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="ActionBarButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/abc_text_size_subtitle_material_toolbar</item>
        <!--<item name="android:textSize">@dimen/text_size_actionbar_save_btn</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/text_selector_white_translucent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="shadoweffect">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <!--Add Registration/Education Details  EditText Style-->
    <style name="add_edit_doctor_profile_details_material_edit_text_style">
        <item name="android:paddingBottom">@dimen/dotor_profile_edit_text_bottom_padding</item>
        <item name="android:paddingTop">@dimen/dotor_profile_edit_text_top_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">
            @dimen/text_size_doctor_profile_item_header_child
        </item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColorHint">@color/grey_light_text</item>
        <item name="android:background">
            @drawable/edit_text_bottom_line_grey_blue_solid_white_selector
        </item>
    </style>
    <!--Add Registration/Education Details  Floating label-->
    <style name="add_edit_doctor_profile_details_material_label_style">
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/grey_light_text</item>
        <item name="android:textSize">
            @dimen/text_size_floating_label
        </item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColorHint">@color/grey_light_text</item>
    </style>
    <!--Add Registration/Education Details textView style-->
    <style name="add_edit_doctor_profile_details_material_text_view_style">
        <item name="android:paddingBottom">@dimen/dotor_profile_edit_text_bottom_padding</item>
        <item name="android:paddingTop">@dimen/dotor_profile_edit_text_top_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">
            @dimen/text_size_add_edit_doctor_education_registration_detail_item
        </item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColorHint">@color/grey_hint_color</item>
        <item name="android:background">
            @drawable/edit_text_bottom_line_grey_blue_solid_white_selector
        </item>
    </style>

    <style name="add_edit_doctor_profile_details_normal_text_view_style">
        <item name="android:paddingBottom">@dimen/dotor_profile_edit_text_top_padding</item>
        <item name="android:paddingTop">@dimen/dotor_profile_edit_text_top_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">
            @dimen/text_size_add_edit_doctor_education_registration_detail_item
        </item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColorHint">@color/grey_hint_color</item>
        <item name="android:background">
            @drawable/edit_text_bottom_line_grey_blue_solid_white_selector
        </item>
    </style>

    <!--Add Registration/Education Details textView style-->
    <style name="add_education_registration_details_material_text_view_style">
        <item name="android:paddingBottom">@dimen/dotor_profile_edit_text_bottom_padding</item>
        <item name="android:paddingTop">@dimen/dotor_profile_edit_text_top_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">
            @dimen/text_size_add_edit_doctor_education_registration_detail_item
        </item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColorHint">@color/grey_hint_color</item>
        <item name="android:background">
            @drawable/edit_text_bottom_line_grey_blue_solid_white_selector
        </item>
    </style>

    <!--Add Registration/Education Details  Floating label-->
    <style name="add_education_registration_details_material_label_style">
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/grey_light_text</item>
        <item name="android:textSize">
            @dimen/text_size_floating_label
        </item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColorHint">@color/grey_light_text</item>
    </style>

    <style name="add_appointment_details_input_edit_text_style">
        <item name="android:paddingBottom">@dimen/dotor_profile_edit_text_bottom_padding</item>
        <item name="android:paddingTop">@dimen/dotor_profile_edit_text_top_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_doctor_profile_item_header_child</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColorHint">@color/grey_light_text</item>
        <item name="android:background">
            @drawable/edit_text_bottom_line_grey_blue_solid_white_selector
        </item>
    </style>

    <style name="add_appointment_details_input_radio_button_style">
        <item name="android:paddingBottom">@dimen/dotor_profile_edit_text_bottom_padding</item>
        <item name="android:paddingTop">@dimen/dotor_profile_edit_text_top_padding</item>
        <item name="android:textColor">@drawable/text_light_grey_normal_blue_selected</item>
        <item name="android:textSize">@dimen/text_size_doctor_profile_item_header_child</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColorHint">@color/grey_hint_color</item>
        <item name="android:checked">false</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="ButtonCustomBorderlessStyles" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="registration_edittext">
        <item name="android:paddingBottom">@dimen/edit_text_patient_registration_padding</item>
        <item name="android:paddingTop">@dimen/edit_text_patient_registration_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_registration_title</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColorHint">@color/grey_hint_color</item>
        <item name="android:background">
            @drawable/edit_text_bottom_line_grey_blue_solid_white_selector
        </item>
    </style>

    <style name="registration_textview">
        <item name="android:paddingBottom">@dimen/edit_text_patient_registration_padding</item>
        <item name="android:paddingTop">@dimen/edit_text_patient_registration_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_registration_title</item>
        <item name="android:gravity">start</item>
        <item name="android:textColorHint">@color/grey_hint_color</item>
    </style>
</resources>
